{
    "name": "brutalism-ui-monorepo",
    "version": "1.0.0",
    "private": true,
    "description": "Neo-Brutalism UI Library Monorepo",
    "scripts": {
        "dev": "pnpm --filter docs dev",
        "build": "pnpm --filter brutalist-ui build && pnpm --filter docs build",
        "build:ui": "pnpm --filter brutalist-ui build",
        "build:docs": "pnpm --filter docs build",
        "lint": "pnpm -r lint",
        "clean": "pnpm -r clean",
        "typecheck": "pnpm -r typecheck",
        "test": "pnpm --filter brutalist-ui test",
        "test:watch": "pnpm --filter brutalist-ui test:watch",
        "test:coverage": "pnpm --filter brutalist-ui test:coverage"
    },
    "devDependencies": {
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    },
    "packageManager": "pnpm@8.15.0"
}
